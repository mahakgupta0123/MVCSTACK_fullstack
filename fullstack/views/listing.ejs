<% layout('../layouts/boilerplate') %>

<body>
  <h1 class="px-4"><%= data.title %></h1>
  <h5 class="text-secondary px-4"><%= data.description %></h5>
  <div>
    <img
      src="<%= data.image %>"
      height="300px"
      width="90%"
      class="rounded-5 mb-3 mx-3"
    />
  </div>
  <div class="d-flex gap-3">
    <div class="mx-4 mb-4">
      <form method="get" action="/listings/<%= data.id%>/edit">
        <button class="fs-6 btn btn-outline-danger">Edit</button>
      </form>
    </div>
    <div class="mb-4">
      <form method="post" action="/listings/<%= data.id%>?_method=DELETE">
        <button class="fs-6 btn btn-outline-danger">Delete Listings</button>
      </form>
    </div>
  </div>
  <div>
    <hr />
    <form method="post" action="/listings/<%= data.id %>/reviews" class="m-4">
      <h3>leave your valuable review</h3>
      <label class="form-label" for="rating">rating</label>
      <input
        type="range"
        min="0"
        max="5"
        class="form-range rounded-3"
        id="rating"
        name="review[rating]"
        required
      />
      <label class="form-label" for="comment">comment</label>
      <textarea
        type="text"
        class="form-control"
        id="comment"
        name="review[comment]"
        required
      ></textarea>
      <br />
      <button class="fs-6 btn btn-outline-danger">create a review</button>
    </form>
  </div>
  <hr />
  <div class="m-4">
    <h3>all reviews</h3>
    <% for(review of data.review){%>
    
    <div class="card mb-4" style="width: 18rem">

      <div class="card-body">
        <h5 class="card-title">review</h5>
        <p class="card-text">
          <%= review.rating%>
        </p>
        <p class="card-text">
          <%= review.comment%>
        </p>
        <a href="#" class="btn btn-outline-danger">show more</a>
      </div>
    </div>

    <%}%>
  </div>
</body>
