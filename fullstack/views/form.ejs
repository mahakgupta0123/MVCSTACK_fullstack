<% layout('../layouts/boilerplate') %>

<body>
  <form
    class="row"
    method="post"
    action="/listings"
    style="padding: 0 150px 0 150px"
  >
    <h1>Create your new listings</h1>
    <div class="col-6">
      <br />
      <label for="title">title:</label>
      <input
        type="text"
        name="title"
        id="title"
        placeholder="enter your title"
        class="rounded-5 p-2 border form-control"
        required
      /><br /><br />
    </div>
    <div class="col-6">
      <br />
      <label for="description">description:</label>
      <input
        type="text"
        name="description"
        id="description"
        placeholder="enter your description"
        class="rounded-5 p-2 border form-control"
        required
      /><br /><br />
    </div>
    <div class="col-12">
      <label for="image">image:</label>
      <input
        name="image"
        type="text"
        id="image"
        placeholder="enter the image url"
        class="rounded-5 p-2 border form-control"
        required
      /><br /><br />
    </div>
    <div class="col-6">
      <label for="price">price:</label>
      <input
        name="price"
        id="price"
        placeholder="enter the price"
        class="rounded-5 p-2 border form-control"
        required
      /><br /><br />
    </div>
    <div class="col-6">
      <label for="location">location:</label>
      <input
        name="location"
        id="location"
        type="text"
        placeholder="enter the location"
        class="rounded-5 p-2 border form-control"
        required
      /><br /><br />
    </div>
    <div class="col-12">
      <button class="btn btn-outline-danger" type="submit">Submit form</button>
    </div>
  </form>
  <!-- <script src="../public/js/script.js"></script> -->
</body>
